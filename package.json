{
  "name": "sandercokart.com",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky",
    "clean": "turbo clean && echo 'Deleting root node_modules...' && rm -rf node_modules"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "(apps|packages)/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "(apps|packages)/*.{css,scss}": [
      "prettier --write"
    ],
    "apps/sandercokart.com/**/*.mdx": [
      "node ./scripts/article-update.js"
    ]
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "2.4.4",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.0.10",
      "@types/react-dom": "19.0.4"
    },
    "onlyBuiltDependencies": [
      "@sentry/cli",
      "@swc/core",
      "core-js-pure",
      "es5-ext",
      "esbuild",
      "sharp",
      "unrs-resolver"
    ]
  }
}
